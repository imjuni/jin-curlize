{
  "singleQuote": true,
  "trailingComma": "all",
  "printWidth": 120,
  "arrowParens": "always",
  "parser": "typescript",
  "plugins": ["prettier-plugin-organize-imports"],
  "overrides": [
    {
      "files": "*.md",
      "options": {
        "parser": "markdown"
      }
    },
    {
      "files": ".eslintrc",
      "options": {
        "parser": "json"
      }
    },
    {
      "files": ".eslintrc.cjs",
      "options": {
        "parser": "babel"
      }
    },
    {
      "files": [
        ".vscode/launch.json",
        ".vscode/settings.json",
        ".swcrc",
        ".prettierrc.json",
        "package.json",
        "tsconfig.eslint.json",
        "tsconfig.prod.json",
        "tsconfig.json"
      ],
      "options": {
        "parser": "json"
      }
    }
  ]
}
